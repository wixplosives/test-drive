{
  "name": "test-drive",
  "version": "0.0.104",
  "description": "Opinionated library for writing web component tests",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc -d",
    "bundle": "webpack --progress",
    "pretest": "npm run clean && npm run build && npm run bundle",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha --reporter mocha-env-reporter dist/test/index.node.js",
    "test:browser": "karma start --single-run",
    "start": "webpack-dev-server --progress"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wix/test-drive.git"
  },
  "keywords": [],
  "author": "Jiri Tobisek <jiri@wix.com>",
  "contributors": [
    "Avi Vahl <avi.vahl@wix.com>",
    "Amir Arad <amira@wix.com>",
    "Kieran Williams <kieranw@wix.com>",
    "Lior Zisman <liorzi@wix.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wix/test-drive/issues"
  },
  "homepage": "https://github.com/wix/test-drive#readme",
  "devDependencies": {
    "@types/mocha": "2.2.41",
    "karma": "1.6.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-edge-launcher": "0.4.1",
    "karma-env-reporter": "1.0.13",
    "karma-firefox-launcher": "1.0.1",
    "karma-ie-launcher": "1.0.0",
    "karma-mocha": "1.3.0",
    "mocha": "3.3.0",
    "mocha-env-reporter": "2.0.4",
    "mocha-loader": "1.1.1",
    "npminject": "1.0.289",
    "rimraf": "2.6.1",
    "ts-loader": "2.0.3",
    "typescript": "2.3.2",
    "webpack": "1.14.0",
    "webpack-dev-server": "1.16.2"
  },
  "dependencies": {
    "@types/bluebird": "3.5.3",
    "@types/chai": "3.5.2",
    "@types/chai-as-promised": "0.0.30",
    "@types/chai-dom": "0.0.5",
    "@types/sinon": "2.1.3",
    "@types/sinon-chai": "2.7.27",
    "bluebird": "3.5.0",
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
